<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical" android:padding="24dp" android:layout_marginTop="20dp">

    <EditText android:id="@+id/edtEmail" android:hint="E-mail"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:inputType="textEmailAddress"/>

    <EditText android:id="@+id/edtPassword" android:hint="Senha"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:inputType="textPassword" />

    <Button android:id="@+id/btnLogin" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Entrar" />

    <Button android:id="@+id/btnRegister" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Criar Conta" />
</LinearLayout>
