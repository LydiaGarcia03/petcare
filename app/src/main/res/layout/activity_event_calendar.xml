<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginTop="20dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/txtSelectedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nenhuma data selecionada" />

        <Button
                android:id="@+id/btnPickDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecionar Data" />

        <Spinner
                android:id="@+id/spinnerPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

        <Spinner
                android:id="@+id/spinnerMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

        <Button
                android:id="@+id/btnSaveMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar Humor"
                android:layout_marginTop="12dp" />

        <EditText
                android:id="@+id/edtEventType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo de evento (ex: consulta)"
                android:layout_marginTop="12dp" />

        <Button
                android:id="@+id/btnSaveEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar Evento"
                android:layout_marginTop="12dp" />

        <ListView
                android:id="@+id/listEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
